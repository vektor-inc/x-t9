{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
	"version": 2,
	"settings": {
		"layout": {
			"contentSize": "var(--wp--custom--content-size--normal)",
			"wideSize": "calc( var(--wp--custom--content-size--normal) + ( 100vw - var(--wp--custom--content-size--normal) ) / 2 )"
		},
		"color": {
			"background": true,
			"text": true,
			"link": false,
			"custom": true,
			"defaultPalette": true,
			"palette": [
				{
					"slug": "primary",
					"color": "#233A73",
					"name": "Primary"
				},
				{
					"slug": "primary-hover",
					"color": "#1c45ab",
					"name": "Primary Hover"
				},
				{
					"slug": "bg-primary",
					"color": "#fff",
					"name": "BG Primary"
				},
				{
					"slug": "bg-secondary",
					"color": "#f5f5f5",
					"name": "BG Secondary"
				},
				{
					"slug": "text-normal",
					"color": "#333",
					"name": "Text Normal"
				},
				{
					"slug": "text-secondary",
					"color": "rgba(0,0,0,0.5)",
					"name": "Text Secondary"
				},
				{
					"slug": "border-normal",
					"color": "rgba( 0,0,0,0.1 )",
					"name": "Border Normal"
				},
				{
					"slug": "bg-dark",
					"color": "#222",
					"name": "BG Dark ( Base Contrast )"
				},
				{
					"slug": "text-normal-darkbg",
					"color": "rgba( 255,255,255,0.7 )",
					"name": "Text Normal (Dark BG)"
				},
				{
					"slug": "text-secondary-darkbg",
					"color": "rgba( 255,255,255,0.6 )",
					"name": "Text Secondary (Dark BG)"
				},
				{
					"slug": "border-normal-darkbg",
					"color": "rgba( 255,255,255,0.1 )",
					"name": "Border Normal (Dark BG)"
				}
			],
			"customGradient": true,
			"defaultGradients": true,
			"gradients": [],
			"duotone": [],
			"customDuotone": true
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"spacingSizes": [
				{
					"//": "Why the choice of slugs in the 10,20,30 format: https://wp.me/p2AvED-pxv ",
					"name": "XXS",
					"slug": "30",
					"size": "var(--wp--custom--spacing--xx-small)"
				},
				{
					"name": "XS",
					"slug": "40",
					"size": "var(--wp--custom--spacing--x-small)"
				},
				{
					"name": "S",
					"slug": "50",
					"size": "var(--wp--custom--spacing--small)"
				},
				{
					"name": "M",
					"slug": "60",
					"size": "var(--wp--custom--spacing--medium)"
				},
				{
					"name": "L",
					"slug": "70",
					"size": "var(--wp--custom--spacing--large)"
				},
				{
					"name": "XL",
					"slug": "80",
					"size": "var(--wp--custom--spacing--x-large)"
				}
			],
			"units": [
				"px",
				"em",
				"rem",
				"vh",
				"vw",
				"%"
			]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"typography": {
			"dropCap": false,
			"lineHeight": true,
			"fontFamilies": [
				{
					"slug": "system-font",
					"name": "System Font",
					"fontFamily": "\"ヒラギノ角ゴ ProN\", \"Hiragino Kaku Gothic ProN\", \"メイリオ\", Meiryo, sans-serif"
				},
				{
					"fontFamily": "\"Source Serif Pro\", serif",
					"name": "Source Serif Pro",
					"slug": "source-serif-pro",
					"fontFace": [
						{
							"fontFamily": "Source Serif Pro",
							"fontWeight": "200 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./assets/fonts/source-serif-pro/SourceSerif4Variable-Roman.ttf.woff2"
							]
						},
						{
							"fontFamily": "Source Serif Pro",
							"fontWeight": "200 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [
								"file:./assets/fonts/source-serif-pro/SourceSerif4Variable-Italic.ttf.woff2"
							]
						}
					]
				}
			],
			"fontSizes": [
				{
					"name": "Tiny",
					"slug": "tiny",
					"size": "10px"
				},
				{
					"name": "X small",
					"slug": "x-small",
					"size": "0.75rem"
				},
				{
					"name": "Small",
					"slug": "small",
					"size": "0.875rem"
				},
				{
					"name": "Medium",
					"slug": "medium",
					"size": "1rem"
				},
				{
					"name": "Large",
					"slug": "large",
					"size": "1.125rem"
				},
				{
					"name": "X Large",
					"slug": "x-large",
					"size": "1.25rem"
				},
				{
					"name": "XX Large",
					"slug": "xx-large",
					"size": "1.5rem"
				},
				{
					"name": "XXX Large",
					"slug": "xxx-large",
					"size": "1.75rem"
				},
				{
					"name": "Huge",
					"slug": "huge",
					"size": "2.2rem"
				}
			]
		},
		"custom": {
			"content-size": {
				"normal": "min( 1110px, 90vw )"
			},
			"layout": {
				"sidebar": "220px"
			},
			"radius": {
				"button": "0.2rem"
			},
			"spacing": {
				"xx-small": "0.375rem",
				"x-small": "0.75rem",
				"small": "1.5rem",
				"medium": "2.4rem",
				"large": "4rem",
				"x-large": "6rem",
				"editor-padding": "2rem",
				"button-sm": "0.3em 1em",
				"menu-indent": "0.875rem"
			},
			"typography": {
				"line-height": {
					"normal": "1.75",
					"heading": "1.5"
				}
			}
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--bg-primary)",
			"text": "var(--wp--preset--color--text-normal)"
		},
		"spacing": {
			"blockGap": "var(--wp--custom--spacing--small)",
			"padding": {
				"top": 0,
				"right": "var(--wp--preset--spacing--30)",
				"bottom": 0,
				"left": "var(--wp--preset--spacing--30)"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontWeight": "700",
					"fontSize": "var(--wp--preset--font-size--huge)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xxx-large)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--text-normal)"
				}
			}
		},
		"blocks": {
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)"
				}
			},
			"core/navigation": {
				"spacing": {
					"blockGap": "0"
				},
				"typography": {
					"lineHeight": "1.5"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "page-2col",
			"title": "Page 2columns",
			"postTypes": [
				"page"
			]
		},
		{
			"name": "page-lp",
			"title": "Page for LP",
			"postTypes": [
				"page"
			]
		},
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [
				"page",
				"post"
			]
		},
		{
			"name": "single-1col",
			"title": "Single 1column",
			"postTypes": [
				"post"
			]
		}
	],
	"templateParts": [
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "loop-archive",
			"title": "Loop Archive",
			"area": "uncategorized"
		},
		{
			"name": "page-header-page",
			"title": "Page Header ( page )",
			"area": "uncategorized"
		},
		{
			"name": "page-header-single",
			"title": "Page Header ( single )",
			"area": "uncategorized"
		},
		{
			"name": "sidebar-post",
			"title": "Sidebar(Post)",
			"area": "uncategorized"
		}
	]
}