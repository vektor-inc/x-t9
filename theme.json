{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
	"version": 2,
	"settings": {
		"layout": {
			"contentSize": "var(--wp--custom--content-size--normal)",
			"wideSize": "calc( var(--wp--custom--content-size--normal) + ( 100vw - var(--wp--custom--content-size--normal) ) / 2 )"
		},
		"position": {
			"sticky": true
		},
		"dimensions": {
			"minHeight": true,
			"aspectRatio": true
		},
		"background": {
			"backgroundImage": true,
			"backgroundSize": true
		},
		"color": {
			"background": true,
			"text": true,
			"link": false,
			"custom": true,
			"defaultPalette": true,
			"palette": [
				{
					"slug": "primary",
					"color": "#233A73",
					"name": "Primary"
				},
				{
					"slug": "primary-hover",
					"color": "#1c45ab",
					"name": "Primary Hover"
				},
				{
					"slug": "bg-primary",
					"color": "#fff",
					"name": "BG Primary"
				},
				{
					"slug": "bg-secondary",
					"color": "#f5f5f5",
					"name": "BG Secondary"
				},
				{
					"slug": "text-normal",
					"color": "#333",
					"name": "Text Normal"
				},
				{
					"slug": "text-secondary",
					"color": "rgba(0,0,0,0.5)",
					"name": "Text Secondary"
				},
				{
					"slug": "border-normal",
					"color": "rgba( 0,0,0,0.1 )",
					"name": "Border Normal"
				},
				{
					"slug": "bg-dark",
					"color": "#222",
					"name": "BG Dark ( Base Contrast )"
				},
				{
					"slug": "text-normal-darkbg",
					"color": "rgba( 255,255,255,0.7 )",
					"name": "Text Normal (Dark BG)"
				},
				{
					"slug": "text-secondary-darkbg",
					"color": "rgba( 255,255,255,0.6 )",
					"name": "Text Secondary (Dark BG)"
				},
				{
					"slug": "border-normal-darkbg",
					"color": "rgba( 255,255,255,0.1 )",
					"name": "Border Normal (Dark BG)"
				}
			],
			"customGradient": true,
			"defaultGradients": true,
			"gradients": [],
			"duotone": [],
			"customDuotone": true
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"spacingSizes": [
				{
					"//": "Why the choice of slugs in the 10,20,30 format: https://wp.me/p2AvED-pxv ",
					"name": "XXS",
					"slug": "30",
					"size": "var(--wp--custom--spacing--xx-small)"
				},
				{
					"name": "XS",
					"slug": "40",
					"size": "var(--wp--custom--spacing--x-small)"
				},
				{
					"name": "S",
					"slug": "50",
					"size": "var(--wp--custom--spacing--small)"
				},
				{
					"name": "M",
					"slug": "60",
					"size": "var(--wp--custom--spacing--medium)"
				},
				{
					"name": "L",
					"slug": "70",
					"size": "var(--wp--custom--spacing--large)"
				},
				{
					"name": "XL",
					"slug": "80",
					"size": "var(--wp--custom--spacing--x-large)"
				}
			],
			"units": [
				"px",
				"%",
				"vw",
				"vh",
				"em",
				"rem",
				"svw",
				"lvw",
				"dvw",
				"svh",
				"lvh",
				"dvh",
				"svi",
				"lvi",
				"dvi",
				"svb",
				"lvb",
				"dvb",
				"vmin",
				"svmin",
				"lvmin",
				"dvmin",
				"vmax",
				"svmax",
				"lvmax",
				"dvmax"
			]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"typography": {
			"dropCap": false,
			"lineHeight": true,
			"fluid": false,
			"fontFamilies": [
				{
					"slug": "system-font",
					"name": "System Font",
					"fontFamily": "\"ヒラギノ角ゴ ProN\", \"Hiragino Kaku Gothic ProN\", \"メイリオ\", Meiryo, sans-serif"
				},
				{
					"fontFamily": "\"Source Serif Pro\", serif",
					"name": "Source Serif Pro",
					"slug": "source-serif-pro",
					"fontFace": [
						{
							"fontFamily": "Source Serif Pro",
							"fontWeight": "200 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./assets/fonts/source-serif-pro/SourceSerif4Variable-Roman.ttf.woff2"
							]
						},
						{
							"fontFamily": "Source Serif Pro",
							"fontWeight": "200 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [
								"file:./assets/fonts/source-serif-pro/SourceSerif4Variable-Italic.ttf.woff2"
							]
						}
					]
				}
			],
			"fontSizes": [
				{
					"fluid": false,
					"name": "Tiny",
					"slug": "tiny",
					"size": "10px"
				},
				{
					"fluid": false,
					"name": "X small",
					"slug": "x-small",
					"size": "clamp(11px, calc(11px + (100vw - 360px) * ( (12 - 11) / (1200 - 360)) ), 12px)"
				},
				{
					"fluid": false,
					"name": "Small",
					"slug": "small",
					"size": "clamp(12.56px, calc( 12.56px + (100vw - 360px) * ( (13.91 - 12.56) / (1200 - 360)) ), 13.91px)"
				},
				{
					"name": "Medium",
					"slug": "medium",
					"size": "clamp(14px, calc( 14px + (100vw - 360px) * ( (16 - 14) / (1200 - 360)) ), 16px)"
				},
				{
					"name": "Large",
					"slug": "large",
					"size": "clamp(15.61px, calc( 15.61px + (100vw - 360px) * ( (18.4 - 15.61) / (1200 - 360)) ), 18.4px)"
				},
				{
					"name": "X Large",
					"slug": "x-large",
					"size": "clamp(17.4px, calc( 17.4px + (100vw - 360px) * ( (21.16 - 17.4) / (1200 - 360)) ), 21.16px)"
				},
				{
					"name": "XX Large",
					"slug": "xx-large",
					"size": "clamp(19.4px, calc( 19.4px + (100vw - 360px) * ( (24.33 - 19.4) / (1200 - 360)) ), 24.33px)"
				},
				{
					"name": "XXX Large",
					"slug": "xxx-large",
					"size": "clamp(21.64px, calc( 21.64px + (100vw - 360px) * ( (27.98 - 21.64) / (1200 - 360)) ), 27.98px)"
				},
				{
					"name": "Huge",
					"slug": "huge",
					"size": "clamp(24.12px, calc( 24.12px + (100vw - 360px) * ( (32.18 - 24.12) / (1200 - 360)) ), 32.18px)"
				}
			]
		},
		"custom": {
			"content-size": {
				"normal": "min( 1110px, 90vw )"
			},
			"layout": {
				"sidebar": "220px"
			},
			"radius": {
				"button": "0.1rem"
			},
			"spacing": {
				"xx-small": "0.375rem",
				"x-small": "0.75rem",
				"small": "1.5rem",
				"medium": "2.4rem",
				"large": "4rem",
				"x-large": "6rem",
				"editor-padding": "2rem",
				"button-sm": "0.3em 1em",
				"menu-indent": "0.875rem"
			},
			"typography": {
				"line-height": {
					"normal": "1.75",
					"heading": "1.5"
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--bg-primary)",
			"text": "var(--wp--preset--color--text-normal)"
		},
		"spacing": {
			"blockGap": "var(--wp--custom--spacing--small)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontWeight": "700",
					"fontSize": "var(--wp--preset--font-size--huge)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xxx-large)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--text-normal)"
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontWeight": "700",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)",
					"fontSize": "clamp(12px, calc((100vw - 360px) * (10 / (1200 - 360)) + 12px), 22px)"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)"
				}
			},
			"core/cover": {
				"dimensions": {
					"minHeight": "0"
				}
			},
			"core/navigation": {
				"spacing": {
					"blockGap": "0"
				},
				"typography": {
					"lineHeight": "1.5"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/post-terms": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none",
							"fontSize": "var(--wp--preset--font-size--x-small)"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "page-2col",
			"title": "Page 2columns",
			"postTypes": [
				"page"
			]
		},
		{
			"name": "page-lp",
			"title": "Page for LP",
			"postTypes": [
				"page"
			]
		},
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [
				"page",
				"post"
			]
		},
		{
			"name": "single-1col",
			"title": "Single 1column",
			"postTypes": [
				"post"
			]
		}
	],
	"templateParts": [
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "loop-archive",
			"title": "Loop Archive",
			"area": "uncategorized"
		},
		{
			"name": "page-header-page",
			"title": "Page Header ( page )",
			"area": "uncategorized"
		},
		{
			"name": "page-header-single",
			"title": "Page Header ( single )",
			"area": "uncategorized"
		},
		{
			"name": "sidebar-post",
			"title": "Sidebar(Post)",
			"area": "uncategorized"
		}
	]
}