{
	"name": "x-t9",
	"version": "0.1.0",
	"main": "Gruntfile.js",
	"author": "Vektor,Inc.",
	"scripts": {
		"build:script": "webpack --config webpack.js",
		"sass": "sass --no-source-map assets/_scss/:assets/_scss/",
		"postcss:autoprefix": "npx postcss assets/_scss/*.css --use autoprefixer -r --no-map",
		"postcss:minify": "npx postcss assets/_scss/*.css --use postcss-minify -d assets/css/ --no-map",
		"postcss:all": "npx postcss assets/_scss/*.css --use autoprefixer postcss-minify -d assets/css/ --no-map",
		"rimraf:css": "npx rimraf assets/_scss/*.css",
		"build:css": "run-s sass postcss:all rimraf:css",
		"build": "npx gulp convert-dynamic && npm run build:script && npm run build:css",
		"watch": "nodemon -e scss --watch assets/_scss -x \"npm run build:css && webpack --config webpack.js --watch && npm run dist\"",
		"copy": "npx gulp dist",
		"zip": "cd dist && zip -r x-t9.zip x-t9",
		"dist": "run-s build copy zip",
		"composer:install:win": "wp-env run composer \"composer install\"",
		"composer:install:mac": "wp-env run composer 'composer install'",
		"phpunit:win": "wp-env run phpunit \"phpunit -c /var/www/html/wp-content/plugins/x-t9/phpunit.xml.dist --verbose\"",
		"phpunit:mac": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/x-t9/phpunit.xml.dist --verbose'",
		"phpunit": "wp-env run phpunit \"phpunit -c /var/www/html/wp-content/plugins/x-t9/phpunit.xml.dist --verbose\""
	},
	"devDependencies": {
		"@babel/core": "^7.18.6",
		"@babel/preset-env": "^7.18.6",
		"autoprefixer": "^10.3.4",
		"babel-loader": "^8.2.5",
		"cpx": "^1.5.0",
		"grunt": "^1.0.3",
		"grunt-wp-i18n": "^1.0.3",
		"grunt-wp-readme-to-markdown": "^2.1.0",
		"gulp": "^4.0.2",
		"gulp-replace": "^1.1.3",
		"nodemon": "^1.3.3",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.3.6",
		"postcss-cli": "^8.3.1",
		"postcss-minify": "^1.1.0",
		"rimraf": "^3.0.2",
		"sass": "^1.39.2",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0"
	}
}